<div class="container mt-3 justify-content-center">
  <div class="cards">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
  <div class="mt-3">
    <%= link_to 'Watchlist', lists_path, class: 'btn btn-primary' %>
  </div>
</div>
