<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/564x/8b/53/46/8b5346325b7d130cd9b604ba085ba3a4.jpg);">
  <div class="container">
    <h1>WatchList</h1>
    <%= link_to 'Create New List', new_list_path, class: 'btn btn-flat' %>
  </div>
</div>
<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-trip">
      <div class="card-img" style="
    background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? (cl_image_path list.photo.key) : "" %>)">
        <div>
          <h1> <%= link_to list.name, list_path(list), class: 'title' %></h1>
        </div>
      </div>
    </div>
  <% end %>
