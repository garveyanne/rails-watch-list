<div class="container mt-3 ">
  <h1><%= @list.name %></h1>
  <%= link_to '+', new_list_bookmark_path(@list), class: 'btn-flat-add' %>
  <%= link_to 'Watchlist', lists_path, class: 'btn-flat' %>
  <div class="card-pick">
    <% @list.bookmarks.each do |list| %>
      <div class=" mt-3 "style="
    background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movie.poster_url %>)
    ">
        <div class="card-pick-info">
          <h2><%= list.movie.title %></h2>
          <p><%= list.movie.overview %></p>
          <p><%= list.movie.rating %></p>
          <p><%= list.comment %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
