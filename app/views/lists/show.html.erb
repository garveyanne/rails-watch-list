<div class="container mt-3 ">
  <h2><%= @list.name %></h1>
  <%= link_to '+', new_list_bookmark_path(@list), class: 'btn-flat' %>
  <%= link_to 'Watchlist', lists_path, class: 'btn-flat' %>
  <% @list.bookmarks.each do |bookmark| %>
    <div class ="card mt-3">
      <%= image_tag bookmark.movie.poster_url, class: 'img' %>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
      <p>⭐️ <%= bookmark.movie.rating %></p>
      <p><%= bookmark.comment %></p>
      <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Remove #{bookmark.movie.title}?" }, class: 'card-remove-link' do %>
        <i class="fa-regular fa-trash-can fa-sm"></i>
      <% end %>
    </div>
  <% end %>
</div>
